{% extends 'template.twig' %}

{% block title %}E-Learning{% endblock %}

{% block body %}
	<body class="hold-transition skin-blue layout-top-nav">
		<div class="wrapper">
			<header class="main-header">
				{% include 'partials/menu_home.twig'%}
			</header>
		</div>
		{% include 'templates/flash/flash.twig'%}
		<div class="content-wrapper">
			<div class="container-fluid">
				<section class="content-header">
                    <h1 class="text-center">
                        Latest Course
                    </h1>
                </section>
				<section class="content">
					<div class="row masonry-container">
						{% for course in data %}
							<div class="col-md-4 col-sm-6 grid">
								<div class="box box-default">
									<div class="box-header with-border">
										<h3 class="box-title">
											<a href="{{path_for('web.course.slug', {slug:course.title_slug})}}">
												<strong>{{course.title}}</strong>
											</a>
										</h3>
									</div>
									<div class="box-body">
										<img src="{{base_url()}}/upload/images/{{course.cover}}" alt="{{course.cover}}" class="cover">
									</div>
									<div class="box-body">
										{{course.description|raw}}
									</div>
									<div class="box-footer">
						    			{% for category in course.category %}
						    			    <button type="button" class="btn btn-sm btn-default">{{category}}</button>
						    			{% endfor %}
						            	<div class="mt-md">
						                	<div class="col-sm-4 pull-left no-padding">
						                		<i class="fa fa-tasks item"></i> <span class="item">{{course.video| first}} parts </span>
						                	</div>
							                <div class="col-sm-4 text-center">
	                							<p class="item">{{data.create_at|date('D, F d Y')}}</p>
	              							</div>
	              							<div class="col-sm-4 no-padding">
		              							<ul class="list-inline pull-right no-padding">
						                            {% if course.type == 0 %}
						                                <li class="no-padding"><label for="type" class="label label-default">Free</label></li>
						                            {% else %}
						                                <li class="no-padding"><label for="type" class="label label-primary">Premium</label></li>
						                            {% endif %}
						                        </ul>
	              							</div>
						            	</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</section>
			</div>
		</div>
	</body>
{% endblock %}

{% block script %}
<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
<script>
	var $container = $('.masonry-container');
	$container.masonry({
    	columnWidth: '.grid',
    	itemSelector: '.grid'
 	});   
</script>
{% endblock %}